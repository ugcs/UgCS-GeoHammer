<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <id>zip</id>
    <includeBaseDirectory>true</includeBaseDirectory>

    <formats>
        <format>zip</format>
    </formats>
	<fileSets>
    	<fileSet>
      		<directory>${project.build.directory}/jre17</directory>
			<useDefaultExcludes>true</useDefaultExcludes>
			<outputDirectory>/jre17</outputDirectory>
		</fileSet>
	</fileSets>
    <files>
        <file>
            <source>${project.build.directory}/${project.artifactId}-jar-with-dependencies.jar</source>
            <outputDirectory>/</outputDirectory>
            <fileMode>777</fileMode>
        </file>

        <file>
            <source>${project.build.directory}/${project.artifactId}.exe</source>
            <outputDirectory>/</outputDirectory>
        </file>

        <file>
            <source>${project.basedir}/start.cmd</source>
            <outputDirectory>/</outputDirectory>
        </file>
    </files>
</assembly>